<h1>Create a New Listing - Form</h1>

<h4> <font color="red">"Currently in views/listings/new_phone.html.erb"</font> </h4>

<%= form_with method: @listing do |form| %>
  <%= form.label "Product: " %>
  <%= form.collection_select :product_id, Product.all, :id, :name  %>
    <br><br>
  <%= form.label "Condition: " %>
  <%= form.select :condition, ['new', 'mint', 'good', 'fair']%>
    <br><br>
  <%= form.label "Color: " %>
  <%= form.select :color, ['silver', 'black', 'red', 'grey']%>
    <br><br>
  <%= form.label "Storage: " %>
  <%= form.select :storage, ['16gb', '32gb', '64gb', '128gb']%>
    <br><br>
  <%= form.label "Memory: " %>
  <%= form.select :storage, ['4gb', '6gb', '8gb']%>
    <br><br>
  <%= form.submit "Create Listing" %>
<% end %>


