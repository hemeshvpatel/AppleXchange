
<h1><%= @user.full_name %></h1>
<h2>Username: <%= @user.username %></h2>

<h2>Balance: $<%= number_with_precision(@user.balance, precision: 2) %></h2>

<h2>My Purchases:</h2>
<% @user.exchanges.each do |exchange| %>
    <%= link_to exchange.listing.product.name, exchange_path(exchange) %><br>
<% end %>

<h2>My Active Listings:</h2>
<% @user.active_listings.each do |listing| %>
    <%= link_to listing.product.name, listing_path(listing) %><br>
<% end %>

<h2>Closed Listings</h2>
<% @user.inactive_listings.each do |listing| %>
    <%= link_to listing.product.name, listing_path(listing) %><br>
<% end %>


